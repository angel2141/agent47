	<script>
	function checkuser()
	{
		var p01 =document.getElementById("number");
		var p02 =p01.value;
		var p03 =document.getElementById("password");
		var p04 =p01.value;
		var msg =document.getElementById("msg");
		if(p02==0||p04==0)
			{
				msg.innerHTML="请输入账号或密码";
				msg.style.color="red";
			}

		else
			{
				msg.innerHTML="";
			}
	}
